@model IEnumerable<Test2.Models.Project>

@{
    ViewData["Title"] = "Index";
}
<h3>Configure Projects</h3>
<p>This shows all available projects that can be configured by a user.</p>
<p>
    <a asp-action="Create">Create New Project</a>
</p>
<table class="table table-striped">
    <thead>
        <tr class="table-primary">
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ControllerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowOnDashboard)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ControllerName)
            </td>
            <td>
                @if (item.ShowOnDashboard == true)
                {
                    <span>True</span>
                }
                else
                {
                    <span>False</span>
                }
            </td>

        </tr>
}
    </tbody>
</table>
